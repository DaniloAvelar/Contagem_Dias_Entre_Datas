@model DiferencaEntreDatas.Models.Home

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">



    @using (Html.BeginForm("Index", "Home"))
    {
        <div class="row">
            @ViewBag.Message<br />
            @ViewBag.NVezes
        </div>
        <div class="row"><hr /></div>
        <div class="row">
            <div class="col-sm-4"><h6>Data Inicio</h6></div>
            <div class="col-sm-4"><h6>Data Fim</h6></div>
        </div>
        <div class="row">
            <div class="col-sm-4">@Html.TextBoxFor(model => model.Inicial, htmlAttributes: new { @class = "datefield", type = "date" })</div>
            <div class="col-sm-4">@Html.TextBoxFor(model => model.Final, htmlAttributes: new { @class = "datefield", type = "date" })</div>
            <div class="col-sm-4"><input type="submit" value="Calcular Diferença" /></div>
        </div>
        <div class="row"><hr /></div>
        <div class="row">
            <h5>Resultado: @ViewBag.result</h5>
        </div>
    }
</div>
